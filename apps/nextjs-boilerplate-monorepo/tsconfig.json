{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest", "node"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts", "../../next-i18next.config.js"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.tsx",
    "**/*.test.jsx",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "cypress.config.ts"
  ]
}
